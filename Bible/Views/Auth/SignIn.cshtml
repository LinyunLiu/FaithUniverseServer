@model Account
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="author" content="Bible, Linyun Liu"/>
    <meta name="theme-color" content="#222222">
    <link rel="shortcut icon" href="favicon.png"/>
    <link rel="stylesheet" type="text/css" href="css/auth/signin.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Sign in</title>
</head>
<body>
<main>
    <div class="content">
        <div style="display: flex; flex-direction: row">
            <img src="favicon.png" alt="" class="icon" style="width: 40px; margin-right: 20px">
            <p class="title">Sign in</p>
        </div>
        <br><br>
        <form method="post" asp-controller="Auth" asp-action="Authenticate">
            <label for="username"><input asp-for="Username" required type="text" id="username" placeholder="Username"></label>
            <label for="password"><input asp-for="Password" required type="password" id="password" placeholder="Password"></label>
            <button type="submit">Sign in</button>
            <p class="message" id="message">@ViewBag.Message</p>
        </form>
    </div>
</main>
<div class="footer">
    <p>2024 | Faith Universe | <a asp-controller="Info" asp-action="Privacy" style="color: grey;">Privacy Policy</a></p>
</div>
</body>
</html>